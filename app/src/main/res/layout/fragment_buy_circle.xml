<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kittikaty.kate.travelopener.BuyCircle"
    android:background="@color/mapGroundColor">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/l2"
            android:id="@+id/levelCanvas">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@color/backroundBuyCircle"
            android:paddingLeft="@dimen/achievement_margin"
            android:paddingRight="@dimen/achievement_margin"
            android:paddingBottom="@dimen/achievement_margin"
            android:paddingTop="@dimen/achievement_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/costIndicator"
                    android:layout_weight="2"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/achievements_title"
                    android:textAlignment="center"
                    android:layout_margin="5dp" />

                <Button
                    android:text="@string/upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/upgradeButton"
                    android:background="@color/colorAccent"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/button_size"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="@dimen/standard_margin"
                    android:padding="@dimen/achievement_margin" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/watch_video"
                    android:layout_weight="2"
                    android:background="@android:color/holo_red_dark"
                    android:text="@string/watch"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold|italic"
                    android:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moneyIndicator"
        android:elevation="1dp"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/coins_animals_count"
        android:layout_margin="@dimen/achievement_margin" />

</FrameLayout>
